# ======================
# META TRADER 5 SETTINGS
# ======================

# MT5 Account Credentials (REQUIRED)
MT5_ACCOUNT_LOGIN=1234567                      # Your MT5 account number
MT5_ACCOUNT_PASSWORD=YourStrongMT5Password!    # Your MT5 password
MT5_ACCOUNT_SERVER=YourBrokerServerName        # Example: MetaQuotes-Demo, ICMarkets-Demo, etc.

# MT5 Trading Settings
MT5_SYMBOLS=EURUSD,GBPUSD,USDJPY,XAUUSD        # Symbols to trade (comma separated)
MT5_TIMEFRAME=MT5_TIMEFRAME_M15                # M1, M5, M15, M30, H1, H4, D1, W1, MN1
MT5_DEVIATION=20                               # Maximum price deviation in points
MT5_MAGIC_NUMBER=888000                        # Unique magic number for EA identification

# ======================
# RISK MANAGEMENT
# ======================

# Position Sizing
RISK_PER_TRADE=0.02                            # 2% risk per trade
MAX_LEVERAGE=10                                # Maximum leverage
STOP_LOSS_PIPS=30                              # Default stop loss in pips
TAKE_PROFIT_PIPS=60                            # Default take profit in pips
MAX_POSITIONS=5                                # Maximum simultaneous positions

# Account Protection
MAX_DRAWDOWN=0.05                              # 5% maximum daily drawdown
DAILY_LOSS_LIMIT=0.03                          # 3% maximum daily loss
WEEKLY_LOSS_LIMIT=0.08                         # 8% maximum weekly loss
AUTO_STOP_LOSS=0.10                            # 10% account loss triggers auto-stop

# ======================
# TRADING STRATEGY
# ======================

# Trading Hours (GMT Time)
TRADING_HOURS_START=08:00                      # Start trading at 8:00 AM GMT
TRADING_HOURS_END=20:00                        # Stop trading at 8:00 PM GMT
TRADING_HOURS_DAYS=1,2,3,4,5                   # Monday-Friday (1=Monday, 7=Sunday)

# Strategy Parameters
TREND_FOLLOWING_WEIGHT=0.4                     # Weight for trend following strategy
MEAN_REVERSION_WEIGHT=0.3                      # Weight for mean reversion strategy
BREAKOUT_WEIGHT=0.3                            # Weight for breakout strategy

# Volatility Settings
VOLATILITY_THRESHOLD=0.005                     # Minimum volatility to trade
MAX_VOLATILITY=0.02                            # Maximum volatility to avoid

# ======================
# AI & QUANTUM SETTINGS
# ======================

# Agent Configuration
TOTAL_AGENTS=10                                # Number of trading agents
AGENT_STRATEGIES=trend,mean_reversion,breakout # Agent strategy types

# Quantum Settings
QUANTUM_CONFIDENCE_THRESHOLD=0.6               # Minimum quantum confidence to trade
QUANTUM_UPDATE_INTERVAL=300                    # Quantum analysis every 5 minutes

# Emotional Intelligence
MIN_CONFIDENCE=0.3                             # Minimum confidence to enter trade
MAX_CAUTION=0.7                                # Maximum caution level allowed

# ======================
# SYSTEM SETTINGS
# ======================

# Database
REDIS_HOST=redis
REDIS_PORT=6379
MONGO_URI=mongodb://mongodb:27017/forex_mas

# Security
KILL_SWITCH_TOKEN=MT5_Super_Secret_Token_2024! # Change this to something very strong!
JWT_SECRET_KEY=Your_JWT_Secret_For_Dashboard_123!

# Performance
UPDATE_INTERVAL=30                             # Trading cycle interval in seconds
DATA_UPDATE_INTERVAL=60                        # Market data update interval
HEARTBEAT_INTERVAL=300                         # System health check interval

# Logging
LOG_LEVEL=INFO
LOG_TRADES=true
LOG_ANALYTICS=true

# Environment
ENVIRONMENT=development                         # development, testing, production
AUTO_START=true                                # Auto-start trading on launch
